{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ntracker.local/schema/rpc.json",
  "title": "NTM Tracker RPC Protocol",
  "description": "JSON-RPC 2.0 protocol definitions for NTM Tracker daemon communication",
  "definitions": {
    "JsonRpcRequest": {
      "type": "object",
      "required": ["jsonrpc", "method"],
      "properties": {
        "jsonrpc": {
          "type": "string",
          "const": "2.0",
          "description": "JSON-RPC version"
        },
        "id": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer" }
          ],
          "description": "Request identifier"
        },
        "method": {
          "type": "string",
          "description": "RPC method name"
        },
        "params": {
          "description": "Method parameters (optional)"
        }
      },
      "additionalProperties": false
    },
    "JsonRpcResponse": {
      "type": "object",
      "required": ["jsonrpc", "id"],
      "properties": {
        "jsonrpc": {
          "type": "string",
          "const": "2.0"
        },
        "id": {
          "oneOf": [
            { "type": "string" },
            { "type": "integer" },
            { "type": "null" }
          ]
        },
        "result": {
          "description": "Success result (present if no error)"
        },
        "error": {
          "$ref": "#/definitions/JsonRpcError",
          "description": "Error object (present if no result)"
        }
      },
      "additionalProperties": false
    },
    "JsonRpcError": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "integer",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "data": {
          "description": "Additional error data"
        }
      },
      "additionalProperties": false
    },
    "JsonRpcNotification": {
      "type": "object",
      "required": ["jsonrpc", "method"],
      "properties": {
        "jsonrpc": {
          "type": "string",
          "const": "2.0"
        },
        "method": {
          "type": "string"
        },
        "params": {}
      },
      "additionalProperties": false
    }
  }
}
