{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ntracker.local/schema/methods/events.json",
  "title": "Event RPC Methods",
  "description": "Event query and subscription methods",
  "definitions": {
    "EventsListParams": {
      "type": "object",
      "properties": {
        "cursor": {
          "type": "integer",
          "description": "Start from events after this ID"
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum events to return"
        }
      },
      "additionalProperties": false
    },
    "EventsListResult": {
      "type": "object",
      "required": ["events", "nextEventId"],
      "properties": {
        "events": {
          "type": "array",
          "items": {
            "$ref": "types.json#/definitions/Event"
          }
        },
        "nextEventId": {
          "type": "integer",
          "description": "Cursor for next page"
        }
      },
      "additionalProperties": false
    },
    "SubscribeParams": {
      "type": "object",
      "required": ["channels"],
      "properties": {
        "channels": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["sessions", "panes", "events", "stats"]
          },
          "description": "Channels to subscribe to"
        },
        "sinceEventId": {
          "type": "integer",
          "description": "Replay events since this ID"
        }
      },
      "additionalProperties": false
    },
    "SubscribeResult": {
      "type": "object",
      "required": ["subscribed", "channels", "lastEventId"],
      "properties": {
        "subscribed": {
          "type": "boolean",
          "const": true
        },
        "channels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "lastEventId": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "EscalationsListParams": {
      "type": "null"
    },
    "EscalationsListResult": {
      "type": "object",
      "required": ["escalations"],
      "properties": {
        "escalations": {
          "type": "array",
          "items": {
            "$ref": "types.json#/definitions/Escalation"
          }
        }
      },
      "additionalProperties": false
    },
    "EscalationsDismissParams": {
      "type": "object",
      "required": ["escalationId"],
      "properties": {
        "escalationId": {
          "type": "integer",
          "description": "Escalation ID to dismiss"
        }
      },
      "additionalProperties": false
    },
    "EscalationsDismissResult": {
      "type": "object",
      "required": ["dismissed", "escalationId"],
      "properties": {
        "dismissed": {
          "type": "boolean",
          "const": true
        },
        "escalationId": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  }
}
