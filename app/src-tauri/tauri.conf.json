{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NTM Tracker",
  "version": "0.1.0",
  "identifier": "com.ntm.tracker",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "NTM Tracker",
        "label": "main",
        "width": 1100,
        "height": 720,
        "resizable": true
      },
      {
        "title": "NTM Tracker",
        "label": "popover",
        "url": "/?view=compact",
        "width": 380,
        "height": 520,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {}
  }
}
